<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    tools:context="NewGameActivity">


    <Button
        android:id="@+id/buttonRestartGame"
        android:layout_width="165dp"
        android:layout_height="46dp"
        android:layout_alignParentBottom="true"
        android:layout_alignStart="@+id/buttonTue"
        android:layout_marginBottom="20dp"
        android:text="Restart"
        tools:layout_editor_absoluteX="194dp"
        tools:layout_editor_absoluteY="449dp"
        android:layout_alignLeft="@+id/buttonTue" />

    <ImageView
        android:id="@+id/imageView2"
        android:layout_width="171dp"
        android:layout_height="286dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentStart="true"
        app:srcCompat="@drawable/guesssong"
        tools:layout_editor_absoluteX="7dp"
        tools:layout_editor_absoluteY="209dp"
        android:layout_alignParentLeft="true" />

    <TextView
        android:id="@+id/textViewSongTitle"
        android:layout_width="273dp"
        android:layout_height="59dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginLeft="39dp"
        android:layout_marginStart="39dp"
        android:layout_marginTop="49dp"
        android:text="Song Title"
        tools:layout_editor_absoluteX="35dp"
        tools:layout_editor_absoluteY="47dp"
        tools:text="Song Title" />

    <Button
        android:id="@+id/buttonTue"
        android:layout_width="165dp"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignStart="@+id/buttonNext"
        android:layout_marginBottom="205dp"
        android:text="Right"
        tools:layout_editor_absoluteX="188dp"
        tools:layout_editor_absoluteY="264dp"
        android:layout_alignLeft="@+id/buttonNext" />

    <Button
        android:id="@+id/buttonFalse"
        android:layout_width="169dp"
        android:layout_height="48dp"
        android:layout_alignParentBottom="true"
        android:layout_alignStart="@+id/buttonTue"
        android:layout_marginBottom="127dp"
        android:text="Wrong"
        tools:layout_editor_absoluteX="190dp"
        tools:layout_editor_absoluteY="342dp"
        android:layout_alignLeft="@+id/buttonTue" />

    <Button
        android:id="@+id/buttonNext"
        android:layout_width="171dp"
        android:layout_height="48dp"
        android:layout_alignParentEnd="true"
        android:layout_alignParentTop="true"
        android:layout_marginEnd="19dp"
        android:layout_marginTop="190dp"
        android:text="NExt"
        tools:layout_editor_absoluteX="194dp"
        tools:layout_editor_absoluteY="166dp"
        android:layout_alignParentRight="true"
        android:layout_marginRight="19dp" />

</RelativeLayout>