<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    tools:context="NewGameActivity">

    <Button
        android:id="@+id/buttonRestartGame"
        android:layout_width="165dp"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/buttonTrue"
        android:layout_alignParentBottom="true"
        android:layout_alignStart="@+id/buttonTrue"
        android:layout_marginBottom="20dp"
        android:clickable="false"
        android:text="Restart"
        style="@style/Widget.AppCompat.Button.Colored"
        android:textColor="@color/blackColor"
        android:theme="@style/Start.Button"
        tools:layout_editor_absoluteX="194dp"
        tools:layout_editor_absoluteY="449dp"

        />

    <ImageView
        android:id="@+id/imageView2"
        android:layout_width="171dp"
        android:layout_height="261dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentStart="true"
        app:srcCompat="@drawable/guesssong"
        tools:layout_editor_absoluteX="7dp"
        tools:layout_editor_absoluteY="209dp"
        android:layout_alignParentLeft="true" />

    <TextView
        android:id="@+id/textViewSongTitle"
        android:layout_width="match_parent"
        android:layout_height="121dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="6dp"
        android:fontFamily="sans-serif"
        android:gravity="center"
        android:maxLines="3"
        android:minLines="2"
        android:textAppearance="@style/TextAppearance.AppCompat.Display1"
        android:textColor="@color/logoColor"
        android:visibility="visible"
        tools:layout_editor_absoluteX="35dp"
        tools:layout_editor_absoluteY="47dp" />

    <Button
        android:id="@+id/buttonTrue"
        android:layout_width="165dp"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_marginBottom="151dp"
        android:layout_marginEnd="29dp"
        android:layout_marginRight="29dp"
        android:clickable="false"
        style="@style/Widget.AppCompat.Button.Colored"
        android:textColor="@color/blackColor"
        android:theme="@style/Start.Button"
        android:text="Right"
        android:visibility="visible"
        tools:layout_editor_absoluteX="188dp"
        tools:layout_editor_absoluteY="264dp" />

    <Button
        android:id="@+id/buttonFalse"
        android:layout_width="165dp"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignStart="@+id/buttonRestartGame"
        android:layout_marginBottom="88dp"
        android:clickable="false"
        style="@style/Widget.AppCompat.Button.Colored"
        android:textColor="@color/blackColor"
        android:theme="@style/Start.Button"
        android:text="Wrong"
        tools:layout_editor_absoluteX="190dp"
        tools:layout_editor_absoluteY="342dp"

        android:layout_alignLeft="@+id/buttonRestartGame" />

    <TextView
        android:id="@+id/textViewArtist"
        android:layout_width="match_parent"
        android:layout_height="92dp"
        android:layout_above="@+id/imageView2"
        android:layout_alignParentStart="true"
        android:fontFamily="sans-serif"
        android:gravity="center"
        android:textAppearance="@style/TextAppearance.AppCompat.Display1"
        android:textColor="@color/logoColor"
        android:visibility="visible"
        android:layout_alignParentLeft="true" />

    <ProgressBar
        android:id="@+id/timeProgressBar"
        style="?android:attr/progressBarStyleHorizontal"
        android:layout_width="188dp"
        android:layout_height="54dp"
        android:layout_alignStart="@+id/buttonRestartGame"
        android:layout_alignTop="@+id/imageView2"
        android:layout_alignLeft="@+id/buttonRestartGame"
        android:indeterminateTint="#7D3C98"/>

</RelativeLayout>